extends layout

block content
  h3(class='p-2 text-center') Обновление места
  div(class='container-fluid mt-3')
    form(action='/place/' + place.id + '/put', method='post')
      div(class='form-group')
        label(for='id') #
        input(name='id', class='form-control', readonly, value= place.id)
      div(class='form-group')
        label(for='name') Имя
        input(name='name', class='form-control', value= place.Name)
      div(class='form-group')
        label(for='desciption') Описание
        input(name='desciption', class='form-control', value= place.Desciption)
      div(class='form-group')
        label(for='createdAt') Дата создания
        input(name='createdAt', class='form-control', readonly, value= place.createdAt)
      div(class='form-group')
        label(for='updatedAt') Дата обновления
        input(name='updatedAt', class='form-control', readonly, value= place.updatedAt)
      div(class='text-center')
        button(type='submit', class='btn btn-primary') Сохранить
        a(class='btn btn-secondary', href='/places') Отмена